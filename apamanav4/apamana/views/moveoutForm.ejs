<% include _header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <div class="card">
        <div class="card-body">
            <% if(data4) { %>
              <form action="/moveout/update/<%=data4[0].id%>" method="post">
            <% } else { %>
              <form action="/moveout/add" method="post">
            <% } %>

            <div class="form-group" hidden>
              <label>apartment</label>
              <% if(data1){ %>
                <input type="text" name="apartment_id" value="<%= data1[0].id %>" class="form-control">
              <% } else { %>
                <input type="text" name="apartment_id" value="<%= data1[0].id %>" placeholder="apartment" class="form-control">
              <% } %>
            </div>
              <div class="form-group">
                <label>ชื่อผู้ทำสัญญา </label> <a href="/customer/new">เพิ่ม</a>
                <select class="form-control" name="contract_id">
                  <option>กรุณาเลือก</option>
                  <% if(data3){ %>
                  <%  for(var i=0; i<data3.length; i++){ %>
                      <option value="<%= data3[i].id %>" <% if(data4) if(data3[i].id == data4[0].contract_id){ %> selected <% } %>> <%= data3[i].Cname %> </option>
                   <%}%>
                  <%}%>
                </select>
              </div>
              <div class="form-group">
                <label>หมายเลขห้อง </label> <a href="/room/new">เพิ่ม</a>
                <select class="form-control" name="notice_id">
                  <option>กรุณาเลือก</option>
                  <% if(data2){ %>
                  <%  for(var i=0; i<data2.length; i++){ %>
                      <option value="<%= data2[i].id %>" <% if(data4) if(data2[i].id == data4[0].notice_id){ %> selected <% } %>> <%= data2[i].Rname %> </option>
                   <%}%>
                  <%}%>
                </select>
              </div>
            <div class="form-group">
            <label>วันที่ย้ายออก </label>
            <% if(data4){ %>
            <input type="date" name="date_out" value="<%= new Date(data4[0].date_out).toLocaleDateString('thai',{ day:'2-digit',month:'2-digit',year:'numeric'})%>"  class="form-control">
            <% } else { %>
            <input type="date" name="date_out" value="<%= new Date().toLocaleDateString('thai',{ day:'2-digit',month:'2-digit',year:'numeric'})%>" placeholder="วันที่ทำสัญญา" class="form-control">
            <% } %>
              </div>
              <div class="form-group">
            <label>มิตเตอร์ไฟ </label>
            <% if(data4){ %>
            <input type="text" name="electric_meter" value="<%= data4[0].electric_meter  %>"  class="form-control">
          <% } else { %>
            <input type="text" name="electric_meter" value="" placeholder="หน่วยไฟ" class="form-control">
          <% } %>
          </div>
          <div class="form-group">
            <label>มิตเตอร์น้ำ </label>
            <% if(data4){ %>
              <input type="text" name="water_meter" value="<%= data4[0].water_meter  %>"  class="form-control">
              <% } else { %>
                <input type="text" name="water_meter" value="" placeholder="หน่วยน้ำ" class="form-control">
                <% } %>
            </div>
            <div class="form-group">
              <label>ค่าไฟ </label>
              <% if(data4){ %>
                <input type="text" name="electric_price" value="<%= data4[0].electric_price  %>"  class="form-control">
                <% } else { %>
                  <input type="text" name="electric_price" value="" placeholder="ราคาค่าไฟ" class="form-control">
                  <% } %>
              </div>
              <div class="form-group">
                <label>ค่าน้ำ </label>
                <% if(data4){ %>
                  <input type="text" name="water_price" value="<%= data4[0].water_price  %>"  class="form-control">
                  <% } else { %>
                    <input type="text" name="water_price" value="" placeholder="ราคาค่าน้ำ" class="form-control">
                    <% } %>
                </div>
                <div class="form-group"hidden>
                  <label>ค่าขยะ </label>
                  <% if(data4){ %>
                    <input type="text" name="trash_price" value="<%= data4[0].trash_price  %>"  class="form-control">
                    <% } else { %>
                      <input type="text" name="trash_price" value="" placeholder="ค่าขยะ" class="form-control">
                      <% } %>
                  </div>
                  <div class="form-group"hidden>
                    <label>ค่าอินเตอร์เน็ต </label>
                    <% if(data4){ %>
                      <input type="text" name="internet_price" value="<%= data4[0].internet_price  %>"  class="form-control">
                      <% } else { %>
                        <input type="text" name="internet_price" value="" placeholder="ค่าอินเตอร์เน็ต" class="form-control">
                        <% } %>
                    </div>
                    <div class="form-group">
                      <label>ค่าปรับ </label>
                      <% if(data4){ %>
                        <input type="text" name="fine" value="<%= data4[0].fine  %>"  class="form-control">
                        <% } else { %>
                          <input type="text" name="fine" value="" placeholder="ค่าปรับ" class="form-control">
                          <% } %>
                      </div>
                      <div class="form-group">
                        <label>คืนเงินประกัน </label>
                        <% if(data4){ %>
                          <input type="text" name="bail_back" value="<%= data4[0].bail_back  %>"  class="form-control">
                          <% } else { %>
                            <input type="text" name="bail_back" value="" placeholder="เงินประกัน" class="form-control">
                            <% } %>
                        </div>
                        <div class="form-group">
                          <label>สถานะ </label>
                          <% if(data4){ %>
                            <input type="text" name="status" value="<%= data4[0].status  %>"  class="form-control">
                            <% } else { %>
                              <input type="text" name="status" value="" placeholder="สถานะ" class="form-control">
                              <% } %>
                            </div>
                            <div style ="text-align:center">
                              <button type="submit" class="btn btn-success">[บันทึก]</button>
                              <a href="/moveout/new" class="btn btn-warning">[แก้ไข]</a>
                            </div>
            </form>

        </div>
      </div>
    </div>
  </div>
</div>

<% include _footer %>
