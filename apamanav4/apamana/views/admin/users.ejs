<% include _header%>
  <h4 align="center"><u>จัดการผู้ใช้งาน (user)</u></h4>
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-15">

        <a href="/admin/user/new" class="btn btn-primary">ADD</a>
        <table class="table table-bordered table-hover ">
          <thead>
            <tr>
              <th>ลำดับ</th>
              <th>ชื่อหอพัก (Apartment)</th>
              <th>ชื่อเจ้าของหอพัก (Name)</th>
              <th>ชื่อผู้ใช้ (Username)</th>
              <th>รหัสผ่าน (Password)</th>

              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td> <%= (i+1) %> </td>
                  <td> <%= data[i].apartmentname %> </td>
                  <td> <%= data[i].name %> </td>
                  <td> <%= data[i].username %> </td>
                  <td> <%= data[i].password %> </td>

                  <td>
                    <a href="/admin/user/delete/<%= data[i].id %>" class="btn btn-danger"> Delete </a>
                    <a href="/admin/user/update/<%= data[i].id %>" class="btn btn-info"> Update </a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% include _footer%>
