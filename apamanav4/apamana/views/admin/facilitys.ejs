<% include _header%>
  <h4 align="center"><u>สิ่งอำนวยความสะดวก (Facility)</u></h4>
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-9">

        <a href="/admin/facility/new" class="btn btn-primary">ADD</a>
        <table class="table table-bordered table-hover ">
          <thead>
            <tr>
              <th>No</th>
              <th>ชื่ออพาร์ทเมนท์</th>
              <th>สิ่สิ่งอำนวยความสะดวก</th>

              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td> <%= (i+1) %> </td>
                  <td> <%= data[i].apartmentname %> </td>
                  <td> <%= data[i].name %> </td>

                  <td>
                    <a href="/admin/facility/delete/<%= data[i].id %>" class="btn btn-danger"> Delete </a>
                    <a href="/admin/facility/update/<%= data[i].id %>" class="btn btn-info"> Update </a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% include _footer%>
