<% include _header%>
<div class="card border-info mb-3"">
  <div class="card-header"> <h4 align="center"> แจ้งออก </h4></div>
  <div class="card-body">
      <div class="row mt-3">

        <a href="/admin/notice/new" class="btn btn-primary">แจ้งออก</a>
        <table Class="table table-bordered table-haver">
          <thead>
            <tr>
              <th>No</th>
              <th>ชื่ออพาร์ทเมนท์</th>
              <th>หมายเลขห้อง</th>
              <th>ชืิ่อผู้ทำสัญญา</th>
              <th>วันที่แจ้ง</th>
              <th>วันที่ออก</th>
              <th>สถานะ</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i=0; i<data.length; i++) { %>
                <tr class="table-secondary">
                  <%  if(data[i].Status == 0 ){ %>
                       <form action="/moveout/success/<%= data[i].No %>" method="post">
                  <td> <%= (i+1) %> </td>
                  <td> <%= data[i].Apname %> </td>
                  <td> <%= data[i].Rname %> </td>
                  <td> <%= data[i].Cname %> </td>
                  <td> <%= new Date(data[i].Date).toLocaleDateString().split('T')[0] %> </td>
                  <td> <%= new Date(data[i].Odate).toLocaleDateString().split('T')[0] %> </td>
                  <td> <% if(data[i].Status == 0){ %> <span class="badge badge-success">ยังอยู่</span> <%  }  else { %> <span class="badge badge-danger"> ย้ายออกแล้ว</span>  <% } %> </td>
                  <td>
                    <a href="/admin/notice/delete/<%= data[i].No %>" class="btn btn-danger"> Delete </a>
                    <a href="/admin/notice/update/<%= data[i].No %>" class="btn btn-info"> Update </a>
                      <button type="submit" class="btn btn-primary">ย้ายออก</button>
                  </td>
                </tr>
              <% } %>
            <% } %>
          <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>


<% include _footer%>
