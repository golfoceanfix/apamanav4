<% include _header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-9">
      <div class="card">
        <div class="card-body">
          <% if ( data ) { %>
          <form action="/admin/localadmin/update/<%= data.No %>" method="post">
            <div class="form-group">
              <label>Username</label>
              <input type="text" name="username" value="<%= data.username %>" class="form-control">
              </div>
               <div class="form-group">
               <label>Password</label>
               <input type="text" name="password" value="<%= data.password %>" class="form-control">
               </div>
              <button type="submit" class="btn btn-success">[บันทึก]</button>
          </form>
          <% }else{ %>
            <div class="col-md-9">
          <form action="/admin/localadmin/add" method="post">
                      <div class="form-group">
                        <label>Username</label>
                        <input type="text" name="username" placeholder="username" class="form-control">
                        </div>
                      <div class="form-group">
                          <label>Password</label>
                        <input type="text" name="password" placeholder="password" class="form-control">
                      </div>
                      <div style ="text-align:center">
                      <button type="submit" class="btn btn-success">[บันทึก]</button>
                      <a href="/admin/localadmin/new" class="btn btn-warning">[แก้ไข]</a>
                      </div>
                    </form>
                    </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>


<% include _footer %>
