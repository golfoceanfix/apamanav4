<% include _header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <div class="card">
        <div class="card-body">
            <% if(data2) { %>
              <form action="/admin/furnituretype/update/<%=data2[0].id %>" method="post">
            <% } else { %>
              <form action="/admin/furnituretype/add" method="post">
            <% } %>

              <div class="form-group">
                <label>apartment</label> <a href="/admin/apartment/new">เพิ่ม</a>
                <select class="form-control" name="apartment_id">
                  <option>กรุณาเลือก</option>
                  <% if(data1){ %>
                  <%  for(var i=0; i<data1.length; i++){ %>
                      <option value="<%= data1[i].id %>" <% if(data2) if(data1[i].id == data2[0].apartment_id){ %> selected <% } %>> <%= data1[i].name %> </option>
                   <%}%>
                  <%}%>
                </select>
              </div>
              <div class="form-group">
                <label>ประเภทเฟอร์นิเจอร์</label>
                <% if(data2){ %>
                <input type="text" name="name" value="<%= data2[0].name %>"  class="form-control">
              <% } else { %>
                <input type="text" name="name" value="" placeholder="ประเภทเฟอร์นิเจอร์" class="form-control">
              <% } %>
            </div>

              <div class="form-group">
                    <label>รายละเอียด </label>
                    <% if(data2){ %>
                    <input type="text" name="detail" value="<%= data2[0].detail %>"  class="form-control">
                  <% } else { %>
                    <input type="text" name="detail" value="" placeholder="รายละเอียด" class="form-control">
                  <% } %>

                </div>
                <div style ="text-align:center">
          <button type="submit" class="btn btn-success">[บันทึก]</button>
            <a href="/admin/furnituretype/new" class="btn btn-warning">[แก้ไข]</a>
            </div>
            </form>

        </div>
      </div>
    </div>
  </div>
</div>

<% include _footer %>
