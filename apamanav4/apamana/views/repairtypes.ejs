
<% include _header %>
<div class="container">
  <div class="row mt-5">

    <div class="col-md-15">
      <a href="/repairtype/new" class = "btn btn-primary"> Add </a>
      <table Class="table table-bordered table-haver">
        <thead>
          <tr>
            <th>No</th>
            <th>ชื่ออุปกรณ์</th>
            <th>Action </th>
          </tr>
        </thead>
        <tbody>
              <%  if(data){ %>
                  <% for(var i = 0 ; i <data.length; i++){ %>
                    <tr>
                      <td> <%= (i+1) %> </td>
                      <td> <%= data[i].name %> </td>

                      <td>
                         <a href="/repairtype/delete/<%= data[i].id %>" class="btn btn-danger"> Delete </a>
                         <a href="/repairtype/update/<%= data[i].id %>" class="btn btn-info"> Update </a>
                      </td>
                    </tr>
                <%  } %>
              <%  } %>
            </tbody>
        </table>
      </div>
    </div>
    </div>

