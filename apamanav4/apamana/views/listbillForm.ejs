<% include _header %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <div class="card">
        <div class="card-body">
            <% if(data3) { %>
              <form action="/listbill/update/<%=data3[0].id%>" method="post">
            <% } else { %>
              <form action="/room/add" method="post">
            <% } %>

            <div class="form-group" hidden>
              <label>apartment</label>
              <% if(data1){ %>
                <input type="text" name="apartment_id" value="<%= data1[0].id %>" class="form-control">
              <% } else { %>
                <input type="text" name="apartment_id" value="<%= data1[0].id %>" placeholder="apartment" class="form-control">
              <% } %>
            </div>
              <div class="form-group">
                <label>ประเภทห้อง </label> <a href="/roomtype/new">เพิ่ม</a>
                <select class="form-control" name="roomtype_id">
                  <option>กรุณาเลือก</option>
                  <% if(data2){ %>
                  <%  for(var i=0; i<data2.length; i++){ %>
                      <option value="<%= data2[i].id %>" <% if(data3) if(data2[i].id == data3[0].roomtype_id){ %> selected <% } %>> <%= data2[i].name %> </option>
                   <%}%>
                  <%}%>
                </select>
              </div>
              <div class="form-group">
                <label>หมายเลขห้อง </label>
                <% if(data3){ %>
                <input type="text" name="name" value="<%= data3[0].name %>"  class="form-control">
              <% } else { %>
                <input type="text" name="name" value="" placeholder="name" class="form-control">
              <% } %>
            </div>

              <div class="form-group">
                <label>ราคา (PRICE)</label>
                <% if(data3){ %>
                <input type="text" name="price" value="<%= data3[0].price %>"  class="form-control">
              <% } else { %>
                <input type="text" name="price" value="" placeholder="price" class="form-control">
              <% } %>
            </div>
                <div class="form-group">
                  <label>ชั้น (FLOOR)</label>
                  <% if(data3){ %>
                  <input type="text" name="floor" value="<%= data3[0].floor %>"  class="form-control">
                <% } else { %>
                  <input type="text" name="floor" value="" placeholder="floor" class="form-control">
                <% } %>
                  </div>

                      <div class="form-group">
                    <label>รายละเอียด </label>
                    <% if(data3){ %>
                    <input type="text" name="detail" value="<%= data3[0].detail %>"  class="form-control">
                  <% } else { %>
                    <input type="text" name="detail" value="" placeholder="detail" class="form-control">
                  <% } %>

                  </div>
                    <div style ="text-align:center">
              <button type="submit" class="btn btn-success">[บันทึก]</button>
                <a href="/listbill/new" class="btn btn-warning">[แก้ไข]</a>
                </div>
            </form>

        </div>
      </div>
    </div>
  </div>
</div>

<% include _footer %>
